<form style="border:1px solid black;width:30%;height:30%;margin-left:34%;margin-top:5%;padding:20px;background-color:blanchedalmond;font-size:15px; text-align:center" method="post">
    <input hidden type"text" name="UserID" value=@ViewData["UserID"] />
    <br />
    <label>Email Id</label>
    <br />
    <input type="text" readonly value=@Model.UserEmail />
    <br />
    <label>Mobile</label>
    <br />
    <input type="text" readonly value=@Model.UserMob />
    <br />
    <label>Payable Amount</label>
    <br />
    <input type="text" readonly value=@Model.Tcharge />
    <br />
    <label>Choose Payment Mode</label>

    @if (ViewData["UserId"] as string != "" && ViewData["UserId"] as string != null)
    {
        <select name="Mode" id="modes">
            <option value="DebitCard">Debit Card</option>
            <option value="CreditCard">Credit Card</option>
            <option value="NetBanking">Net Banking</option>
            <option value="Wallet">Wallet</option>
        </select>
    }
    else
    {
        <select name="Mode" id="modes">
            <option value="DebitCard">Debit Card</option>
            <option value="CreditCard">Credit Card</option>
            <option value="NetBanking">Net Banking</option>
        </select>
    }

    <br />
    <br />
    <input type="submit" style="background-color:darkred;color:white" />

</form>
